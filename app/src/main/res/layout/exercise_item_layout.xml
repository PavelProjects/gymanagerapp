<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/exercise_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/results_count"/>
        <TextView
            android:id="@+id/exercise_results_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5pt"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/best_result"/>
        <TextView
            android:id="@+id/exercise_best_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5pt"/>
    </LinearLayout>

    <TextView
        android:id="@+id/exercise_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>